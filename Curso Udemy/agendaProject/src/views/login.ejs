<%- include("includes/head")%> <%- include("includes/nav")%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar contar ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <%- include("includes/messages") %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda nāo possui uma conta, preencha os campos abaixo!</p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" name="email" />
              <small id="emailHelp" class="form-text text-muted"
                >We'll never share your email with anyone else.</small
              >
            </div>

            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-primary">Criar contar</button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Faça seu login</h4>
          <p>Se você ja possui uma conta, logue abaixo</p>
          <br />

          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label>Email address</label>
              <input type="email" class="form-control" name="email" />
              <small id="emailHelp" class="form-text text-muted"
                >We'll never share your email with anyone else.</small
              >
            </div>

            <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-success">Entrar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("includes/footer")%>
